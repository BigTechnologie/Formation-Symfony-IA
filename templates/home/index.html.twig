{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}

<h1> {{ 'Welcome' | trans }} </h1>

<p>
    {{ 'welcome_1' | trans({name: 'Bruno'}) }}
</p>

<div class="container mt-4">
    <h1 class="text-center mb-4"> Nos Livres </h1>
    <div class="row row-cols-1 row-cols-md-3 g-4">

        {% for livre in livres %}

            <div class="col">
                <article class="card h-100 shadow-sm">
                    <img src="{{ livre.coverImage }}" class="card-img-top" alt="Couverture du livre {{ livre.title }}">

                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title"> {{ livre.title }} </h5>
                        <p>
                        {{ livre.summary|slice(0, 100) }}{% if livre.summary|length > 100 %}...{% endif %}
                        <small> {{ livre.createdAt|date("d-m-Y") }} </small>
                        </p>
                        <a href="{{ path('admin.livre.show', {id: livre.id, slug: livre.slug|lower|replace({'\'': '-', ' ': '-'})}) }}" class="btn btn-outline-primary mt-auto">Lire la suite</a>
                    </div>
                </article>
            </div>

        {% endfor %}

    </div>
   
</div>
{% endblock %}
